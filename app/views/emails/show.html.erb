<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.selection/1.0.1/jquery.selection.min.js"></script>

<div class="container-fluid">

  <div class="page-header">
    <h1><%= @email.user.full_name %>'s email <small>Subtext for header</small></h1>
  </div>

<h3><div id="current-comment" style="background:orange;">current-comment</div></h3>

  <button id="read-comments">Read Comments</button>
  <button id="write-comments">Add Comments</button>

  <div class="row">
    <!-- <div class="col-md-1"></div> -->
    <div class="col-md-9">
      <table>
        <th>
          <tr>
            <th style="width:100px"></th>
            <th></th>
          </tr>
        </th>
        <tbody>
          <tr>
            <td>To: </td>
            <td>mylead@example.com</td>
          </tr>
          <tr>
            <td>From: </td>
            <td><%= @email.user.full_name %>'s email address</td>
          </tr>
          <tr>
            <td>Subject: </td>
            <td><%= @email.subject %> </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-3"><h3>Purpose</h3></div>
  </div>
  <br>
  <div class="row">
    <div  id="email-body" style="color: red; position:absolute; z-index:2;"><%= @email.body %></div>

    <!-- MARKED UP ONE -->
    <div id="commented-body" style=" z-index:1; position:absolute;" ><%= @email.render_comments %></div>
    <div class="col-md-4">
      <%= @email.comment %>
    </div>

  </div>
</div>
<br><br><br><br><br><br><br><br>
<div id="new-comment" style="background:red; display: none;">
  <%= form_for(@comment) do |f| %>

    <%= f.hidden_field :email_id, value: params[:id]  %>
    <%= f.hidden_field :user_id, value: current_user.id  %>
    <br>
    comment
    <%= f.text_field :message %>
    <br>began
    <%= f.text_field :char_began_at %>
    <br>ended
    <%= f.text_field :char_ended_at %>

    <%= f.submit "Create my email", class: "btn btn-primary" %>
  <% end %>
</div>