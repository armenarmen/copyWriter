<p id="notice"><%= notice %></p>

<div class="col-md-12">
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">
      <h1><%= @post.title %></h1> 
      <p style="text-align:right">
        by <%= @post.user.full_name %> <%=@post.created_at.strftime("%D") %>
      </p>
    </div>
    <div class="col-md-1">
    </div>
  </div>

  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">
      <%= @post.body.html_safe %>
    </div>
    <div class="col-md-1">
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
    </div>
    <div class="col-md-10" style="text-align:right">
      <%= link_to 'Back', posts_path %>
    </div>
    <div class="col-md-10">
    </div>
    
  </div>
</div>


